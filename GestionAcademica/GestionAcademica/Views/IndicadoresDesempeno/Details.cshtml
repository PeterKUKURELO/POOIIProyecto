@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //deshabilita la plantilla principal
    //Layout = null;
}

@model GestionAcademica.Models.IndicadorDesempeno

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h2 class="text-info fw-bold">Detalles del Indicador de Desempeño</h2>
        <p class="text-muted">Aquí se muestra la información detallada del indicador seleccionado.</p>
    </div>

    <!-- Tarjeta con detalles -->
    <div class="card shadow-lg rounded">
        <div class="card-body">
            <dl class="row">
                <!-- ID Indicador -->
                <dt class="col-sm-4 text-secondary fw-bold">ID del Indicador:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdIndicador)</dd>

                <!-- Nombre del Estándar -->
                <dt class="col-sm-4 text-secondary fw-bold">Estándar Relacionado:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdEstandar)</dd>

                <!-- Nombre del Nombre Estandar -->
                <dt class="col-sm-4 text-secondary fw-bold">Nombre Estándar Relacionado:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EstandarCalidad.Nombre)</dd>

                <!-- Nombre del Indicador -->
                <dt class="col-sm-4 text-secondary fw-bold">Nombre del Indicador:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <!-- Resultado Actual -->
                <dt class="col-sm-4 text-secondary fw-bold">Resultado Actual:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ResultadoActual)</dd>

                <!-- Fecha de Actualización -->
                <dt class="col-sm-4 text-secondary fw-bold">Fecha de Actualización:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaActualizacion)</dd>
            </dl>
        </div>

        <!-- Botones de acción -->
        <div class="card-footer text-end">
            @Html.ActionLink("Editar", "Edit", new { id = Model.IdIndicador }, new { @class = "btn btn-warning fw-bold me-2" })
            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary fw-bold" })
        </div>
    </div>
</div>
