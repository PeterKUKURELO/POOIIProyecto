@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<GestionAcademica.Models.IndicadorDesempeno>

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">Indicadores de Desempeño</h2>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-success" })
    </div>

    <!-- Tabla con bordes redondeados -->
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm" style="border-radius: 10px; overflow: hidden;">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdIndicador)</th>
                    @*<th>@Html.DisplayNameFor(model => model.IdEstandar)</th>*@
                    <th>@Html.DisplayNameFor(model => model.EstandarCalidad)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.ResultadoActual)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaActualizacion)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdIndicador</td>
                        @*<td>@item.IdEstandar</td>*@
                        <td>@item.EstandarCalidad.Nombre</td> <!-- Nombre del estándar -->
                        <td>@item.Nombre</td>
                        <td>@item.ResultadoActual</td>
                        <td>@item.FechaActualizacion.ToString("yyyy-MM-dd")</td>
                        <td>
                            <!-- Botones de acción -->
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdIndicador }, new { @class = "btn btn-sm btn-warning me-1" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdIndicador }, new { @class = "btn btn-sm btn-info me-1" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdIndicador }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
