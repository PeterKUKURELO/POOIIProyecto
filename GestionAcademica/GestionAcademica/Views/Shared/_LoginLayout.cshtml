<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Fondo general */
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Contenedor principal */
        .container-login {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Tarjeta de Login */
        .card-login {
            border: none;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        /* Encabezado de la tarjeta */
        .card-header-login {
            background: linear-gradient(90deg, #007bff, #0062cc);
            color: white;
            text-align: center;
            border-radius: 15px 15px 0 0;
            padding: 1rem;
            font-weight: bold;
        }

        /* Pie de página */
        .footer-login {
            text-align: center;
            margin-top: 2rem;
            color: #6c757d;
        }

        /* Favicon */
        .favicon {
            height: 40px;
            margin-right: 5px;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/Content/Images/MedallaLogo.png" />
</head>
<body>
    <!-- Contenedor Principal -->
    <div class="container container-login">
        <!-- Renderizado del Cuerpo -->
        @RenderBody()
    </div>

    <!-- Pie de Página -->
    <footer class="footer-login">
        <p>&copy; @DateTime.Now.Year Sistema Académico | Desarrollado por Peter Kukurelo</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
