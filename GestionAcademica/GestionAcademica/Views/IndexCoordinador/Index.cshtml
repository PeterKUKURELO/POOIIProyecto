@model IEnumerable<GestionAcademica.Models.DashboardViewModelAdm>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dashboard General";
}

<main>
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 id="coordinatorTitle" class="text-primary">Bienvenido Coordinador - @ViewBag.NombreUsuario</h1>
        <p class="lead">
            Desde este panel, puedes gestionar estándares académicos, indicadores de desempeño, auditorías y asignaciones de responsables.
        </p>
    </div>

    <!-- Tabla de Datos Clave -->
    <div class="mt-5">
        <h2 class="text-center text-info fw-bold">Resumen General</h2>
        <p class="text-muted text-center">Información clave de estándares, indicadores y auditorías.</p>

        <div class="table-responsive mt-3">
            <table class="table table-striped table-hover shadow-sm" style="border-radius: 10px; overflow: hidden;">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre Estandar</th>
                        <th>Descripcion</th>
                        <th>Nombre Responsable</th>
                        <th>Indicador</th>
                        <th>Resultado Actual</th>
                        <th>Fecha Auditoria</th>
                        <th>Resultado Auditoria</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Estandar.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estandar.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Responsable.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Indicador.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Indicador.ResultadoActual)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaAuditoria)</td>
                            <td>
                                <span class="
                                    @if (item.ResultadoAuditoria == "Positivo") {
                                        @:badge bg-success
                                    } else if (item.ResultadoAuditoria == "Negativo") {
                                        @:badge bg-danger
                                    } else {
                                        @:badge bg-secondary
                                    }
                                    text-white p-2 rounded">
                                    @item.ResultadoAuditoria
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Sección de Tarjetas -->
    <div class="row mt-5">
        <!-- Gestión de Estándares -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 id="standardsTitle" class="text-secondary">Gestión de Estándares</h2>
                    <p>
                        Administra los estándares de calidad académica y asocia indicadores para monitorear el progreso.
                    </p>
                    <p>
                        @Html.ActionLink("Ir a Estándares »", "Index", "EstandaresCalidad", new { area = "" }, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>

        <!-- Indicadores de Desempeño -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 id="indicatorsTitle" class="text-secondary">Indicadores de Desempeño</h2>
                    <p>
                        Visualiza y actualiza los indicadores asociados a los estándares para un seguimiento preciso.
                    </p>
                    <p>
                        @Html.ActionLink("Ir a Indicadores »", "Index", "IndicadoresDesempeno", new { area = "" }, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>

        <!-- Auditorías -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 id="auditsTitle" class="text-secondary">Auditorías</h2>
                    <p>
                        Consulta y registra auditorías realizadas sobre los estándares para garantizar la calidad académica.
                    </p>
                    <p>
                        @Html.ActionLink("Ir a Auditorías »", "Index", "Auditoria", new { area = "" }, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>

        <!-- Responsable de Estándar -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 id="responsiblesTitle" class="text-secondary">Responsable de Estándar</h2>
                    <p>
                        Administra los responsables asignados a los estándares para garantizar el cumplimiento.
                    </p>
                    <p>
                        @Html.ActionLink("Ir a Responsables »", "Index", "ResponsableEstandar", new { area = "" }, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>


