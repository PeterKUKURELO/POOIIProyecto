@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //deshabilita la plantilla principal
    //Layout = null;
}

@model GestionAcademica.Models.Auditoria

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h2 class="text-info fw-bold">Detalles de la Auditoría</h2>
        <p class="text-muted">Aquí se muestra la información detallada de la auditoría seleccionada.</p>
    </div>

    <!-- Tarjeta con detalles -->
    <div class="card shadow-lg rounded">
        <div class="card-body">
            <dl class="row mb-0">
                <!-- ID Auditoría -->
                <dt class="col-sm-4 text-secondary fw-bold">ID de Auditoría:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdAuditoria)</dd>

                <!-- ID Estándar -->
                <dt class="col-sm-4 text-secondary fw-bold">ID del Estándar Relacionado:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdEstandar)</dd>

                <!-- Nombre del Estándar -->
                <dt class="col-sm-4 text-secondary fw-bold">Nombre del Estándar Relacionado:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EstandarCalidad.Nombre)</dd>

                <!-- Observaciones -->
                <dt class="col-sm-4 text-secondary fw-bold">Observaciones:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Observaciones)</dd>

                <!-- Fecha de Auditoría -->
                <dt class="col-sm-4 text-secondary fw-bold">Fecha de Auditoría:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaAuditoria)</dd>

                <!-- Resultado -->
                <dt class="col-sm-4 text-secondary fw-bold">Resultado:</dt>
                <dd class="col-sm-8">
                    @if (Model.Resultado.Equals("Positivo", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-success p-2">Positivo</span>
                    }
                    else if (Model.Resultado.Equals("Negativo", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-danger p-2">Negativo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary p-2">@Model.Resultado</span>
                    }
                </dd>
            </dl>
        </div>

        <!-- Botones de acción -->
        <div class="card-footer text-end">
            @Html.ActionLink("Editar", "Edit", new { id = Model.IdAuditoria }, new { @class = "btn btn-warning fw-bold me-2" })
            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary fw-bold" })
        </div>
    </div>
</div>
