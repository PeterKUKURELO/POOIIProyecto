@model GestionAcademica.Models.Auditoria

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h2 class="text-danger fw-bold">¿Estás seguro de eliminar esta auditoría?</h2>
        <p class="text-muted">Esta acción no se puede deshacer.</p>
    </div>

    <!-- Tarjeta con detalles de la auditoría -->
    <div class="card shadow-lg rounded">
        <div class="card-body">
            <dl class="row mb-0">
                <!-- ID de la Auditoría -->
                <dt class="col-sm-4 text-secondary fw-bold">ID de la Auditoría:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdAuditoria)</dd>

                <!-- ID del Estándar -->
                <dt class="col-sm-4 text-secondary fw-bold">ID del Estándar Asociado:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdEstandar)</dd>

                <!-- Observaciones -->
                <dt class="col-sm-4 text-secondary fw-bold">Observaciones:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Observaciones)</dd>

                <!-- Fecha de Auditoría -->
                <dt class="col-sm-4 text-secondary fw-bold">Fecha de Auditoría:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaAuditoria)</dd>

                <!-- Resultado -->
                <dt class="col-sm-4 text-secondary fw-bold">Resultado:</dt>
                <dd class="col-sm-8">
                    @if (Model.Resultado.Equals("Positivo", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-success p-2">Positivo</span>
                    }
                    else if (Model.Resultado.Equals("Negativo", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-danger p-2">Negativo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary p-2">@Model.Resultado</span>
                    }
                </dd>
            </dl>
        </div>

        <!-- Pie de la tarjeta con botones -->
        <div class="card-footer text-end">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger fw-bold me-2">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary fw-bold" })
            }
        </div>
    </div>
</div>
